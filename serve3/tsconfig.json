{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "../server/dist",
    "baseUrl": "../server",
    "paths": {
      "*": ["../server/node_modules/*", "../server/*"]
    },
    "typeRoots": ["../server/src/typing", "../server/node_modules/@types"], 
    "noImplicitAny": true                               /* Skip type checking all .d.ts files. */
  },
  "include": ["../server/src/**/*.ts", "../server/src/typing/*.d.ts"]
}
